<Window x:Class="Car_Sales.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Car_Sales"
        mc:Ignorable="d"
        Title="Продажи машин" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="380*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="45"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="Бренд">
            </MenuItem>
            <MenuItem Header="Модель">
            </MenuItem>
            <MenuItem Header="Дилер">
            </MenuItem>
            <MenuItem Header="Клиент">
            </MenuItem>
            <MenuItem Header="Доп.оборудование">
            </MenuItem>
            <MenuItem Header="О программе"  />
        </Menu>
        <ToolBar Grid.Row="1">
        </ToolBar>
        <DataGrid x:Name="DataGridSale" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}">
            
        </DataGrid>
        <Button x:Name="Add" Grid.Row="3" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="5,5,5,5" Margin="10,0,0,0"/>
        <Button x:Name="Refresh" Grid.Row="3" Content="Обновить" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="5,5,5,5"  Margin="0,0,10,0"/>
        <StatusBar Grid.Row="4" Grid.ColumnSpan="3">
           
        </StatusBar>
    </Grid>
</Window>
